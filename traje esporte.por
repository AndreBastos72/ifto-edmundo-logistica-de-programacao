programa {
  funcao inicio() {
    

    inteiro idade
    logico convite
    escreva("Digite a idade do convidado: ")
    leia(idade)

    
    escreva("O nome do convidado está no convite? (true para Sim, false para Não): ")
    leia(convite)

    
    se (idade >= 18 e nao convite) 
        {escreva("O convidado precisa usar traje esporte.")}
    senao
       {escreva("O convidado não precisa usar traje esporte.")}


    
  }
}
