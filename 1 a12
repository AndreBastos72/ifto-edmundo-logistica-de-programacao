programa {
    funcao inicio() {
        // Declarando variável para armazenar o número do mês
        inteiro numeroMes

        // Solicitando ao usuário que insira o número do mês
        escreva("Digite um número inteiro entre 1 e 12: ")
        leia(numeroMes)

        // Verificando se o número do mês está dentro do intervalo válido
        escolha (numeroMes) {
            caso 1:
                escreva("Janeiro")
            caso 2:
                escreva("Fevereiro")
            caso 3:
                escreva("Março")
            caso 4:
                escreva("Abril")
            caso 5:
                escreva("Maio")
            caso 6:
                escreva("Junho")
            caso 7:
                escreva("Julho")
            caso 8:
                escreva("Agosto")
            caso 9:
                escreva("Setembro")
            caso 10:
                escreva("Outubro")
            caso 11:
                escreva("Novembro")
            caso 12:
                escreva("Dezembro")
            senao:
                escreva("Número inválido! Insira um número entre 1 e 12.")
        }
    }
}
